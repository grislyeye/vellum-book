<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">

    <title>{{ project.document.title }}</title>

    <link href="vendor/normalize.css/normalize.css" rel="stylesheet">
    <link href="vendor/magick.css/magick.css" rel="stylesheet">
    <link href="assets/styles/main.css" rel="stylesheet">

    <script type="module">
      import './vendor/vellum-doc/vellum-doc.js';
    </script>
  </head>

  <body>
    <vellum-doc anchors>
      <main>
        <section id="document">
          {% capture document %}{% include "README.md" %}{% endcapture %}
          {{ document | markdown | safe }}

          <footer>
            {% capture footer %}{% include "includes/footer.md" %}{% endcapture %}
            {{ footer | markdown | safe }}
          </footer>
        </section>
      </main>
    </vellum-doc>
  </body>
</html>
